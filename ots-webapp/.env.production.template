# BlueWud OTS Production Environment Template
# Copy this to .env.production and fill in the values

# Amazon SP-API Credentials
VITE_AMAZON_SELLER_ID=your_seller_id_here
VITE_AMAZON_ACCESS_TOKEN=your_access_token_here

# Flipkart API Credentials
VITE_FLIPKART_APP_ID=your_app_id_here
VITE_FLIPKART_ACCESS_TOKEN=your_access_token_here

# WhatsApp Business API
VITE_WHATSAPP_API_TOKEN=your_whatsapp_token_here
VITE_WHATSAPP_PHONE_NUMBER=your_business_phone_number

# Zoho CRM Integration
VITE_ZOHO_CLIENT_ID=your_client_id
VITE_ZOHO_CLIENT_SECRET=your_client_secret
VITE_ZOHO_ORG_ID=your_org_id

# Feature Flags
VITE_ENABLE_ML_FORECAST=true
VITE_ENABLE_MOCK_SIMULATION=false # Set to false in production!
