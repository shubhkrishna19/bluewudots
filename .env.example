# Bluewud OTS - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ========== APPLICATION SETTINGS ==========
VITE_APP_NAME=Bluewud OTS
VITE_APP_ENV=development
VITE_APP_DEBUG=true
VITE_API_BASE_URL=http://localhost:5173

# ========== ZOHO CONFIGURATION ==========
# Get these from https://api-console.zoho.com
VITE_ZOHO_CLIENT_ID=your_zoho_client_id_here
VITE_ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
VITE_ZOHO_REFRESH_TOKEN=your_zoho_refresh_token_here
VITE_ZOHO_ORG_ID=your_zoho_org_id_here
VITE_ZOHO_APP_LINK_NAME=your_app_link_name
VITE_ZOHO_DATA_CENTER=com

# ========== AUTHENTICATION ==========
VITE_AUTH_ENABLED=true
VITE_AUTH_PROVIDER=zoho
VITE_SESSION_TIMEOUT_MS=3600000
VITE_TOKEN_REFRESH_INTERVAL_MS=300000

# ========== TWO-FACTOR AUTHENTICATION ==========
VITE_2FA_ENABLED=true
VITE_2FA_ISSUER=Bluewud
VITE_2FA_SERVICE_NAME=Bluewud OTS
VITE_2FA_QR_SIZE=200

# ========== SECURITY SETTINGS ==========
VITE_IP_WHITELIST_ENABLED=true
VITE_RATE_LIMIT_ENABLED=true
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=60000
VITE_ENCRYPTION_ENABLED=true
VITE_ENCRYPTION_KEY=your_encryption_key_here

# ========== OFFLINE SUPPORT ==========
VITE_SW_ENABLED=true
VITE_CACHE_VERSION=1
VITE_OFFLINE_MODE_ENABLED=true
VITE_OFFLINE_SYNC_INTERVAL_MS=60000

# ========== NOTIFICATIONS ==========
VITE_PUSH_NOTIFICATIONS_ENABLED=true
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VITE_VAPID_PRIVATE_KEY=your_vapid_private_key_here
VITE_NOTIFICATION_BATCH_SIZE=50

# ========== AMAZON SP-API ==========
VITE_AMAZON_ENABLED=false
VITE_AMAZON_SP_API_ENDPOINT=https://sellingpartnerapi-na.amazon.com
VITE_AMAZON_LWA_CLIENT_ID=your_amazon_lwa_client_id
VITE_AMAZON_LWA_CLIENT_SECRET=your_amazon_lwa_client_secret
VITE_AMAZON_REFRESH_TOKEN=your_amazon_refresh_token
VITE_AMAZON_SELLER_ID=your_seller_id

# ========== FLIPKART SELLER API ==========
VITE_FLIPKART_ENABLED=false
VITE_FLIPKART_APP_ID=your_flipkart_app_id
VITE_FLIPKART_APP_SECRET=your_flipkart_app_secret
VITE_FLIPKART_HOST=https://api.flipkart.com

# ========== LOGISTICS CARRIERS ==========

# Delhivery
VITE_DELHIVERY_ENABLED=false
VITE_DELHIVERY_API_TOKEN=your_delhivery_api_token
VITE_DELHIVERY_API_ENDPOINT=https://track.delhivery.com/api
VITE_DELHIVERY_ACCOUNT_ID=your_delhivery_account_id

# BlueDart
VITE_BLUEDART_ENABLED=false
VITE_BLUEDART_LICENSE_KEY=your_bluedart_license_key
VITE_BLUEDART_LOGIN_ID=your_bluedart_login_id
VITE_BLUEDART_API_ENDPOINT=https://www.bluedartapi.com

# XpressBees
VITE_XPRESSBEES_ENABLED=false
VITE_XPRESSBEES_API_KEY=your_xpressbees_api_key
VITE_XPRESSBEES_PARTNER_ID=your_partner_id
VITE_XPRESSBEES_API_ENDPOINT=https://api.xpressbees.com

# ========== ANALYTICS & FORECASTING ==========
VITE_ANALYTICS_ENABLED=true
VITE_ANALYTICS_FORECAST_DAYS=30
VITE_ANALYTICS_CACHE_ENABLED=true
VITE_ANALYTICS_CACHE_TTL_MS=3600000
VITE_ANOMALY_THRESHOLD=2.5
VITE_SEASONALITY_ENABLED=true

# ========== WHATSAPP BUSINESS API ==========
VITE_WHATSAPP_ENABLED=false
VITE_WHATSAPP_API_VERSION=v20.0
VITE_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
VITE_WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
VITE_WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# ========== LOGGING & MONITORING ==========
VITE_LOGGING_ENABLED=true
VITE_LOG_LEVEL=info
VITE_ACTIVITY_LOGGING_ENABLED=true
VITE_LOG_RETENTION_DAYS=90
VITE_LOG_BATCH_SIZE=50
VITE_AUTO_SYNC_INTERVAL_MS=60000

# ========== DATABASE SETTINGS ==========
VITE_INDEXEDDB_ENABLED=true
VITE_INDEXEDDB_NAME=bluewud_ots_db
VITE_INDEXEDDB_VERSION=1
VITE_STORAGE_QUOTA_MB=50

# ========== FEATURE FLAGS ==========
VITE_FEATURE_BULK_IMPORT=true
VITE_FEATURE_CSV_EXPORT=true
VITE_FEATURE_ADVANCED_SEARCH=true
VITE_FEATURE_PREDICTIVE_ANALYTICS=true
VITE_FEATURE_MOBILE_OPTIMIZED=true
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_KEYBOARD_SHORTCUTS=true

# ========== PERFORMANCE SETTINGS ==========
VITE_LAZY_LOAD_ENABLED=true
VITE_PAGINATION_SIZE=50
VITE_DEBOUNCE_DELAY_MS=300
VITE_API_TIMEOUT_MS=30000
VITE_MAX_RETRIES=3
VITE_RETRY_DELAY_MS=1000

# ========== DEVELOPMENT SETTINGS (Dev Only) ==========
VITE_MOCK_DATA_ENABLED=false
VITE_API_MOCK=false
VITE_DEVTOOLS_ENABLED=true
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_REPORTING=true

# ========== TESTING SETTINGS (Test Only) ==========
VITE_TEST_MODE=false
VITE_TEST_USER_ID=test-user-1
VITE_TEST_API_KEY=test-api-key-123
